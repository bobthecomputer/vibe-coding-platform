{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vibe Coding Platform",
  "version": "0.1.0",
  "identifier": "com.vibecoding.platform",
  "build": {
    "frontendDist": "../desktop-ui"
  },
  "app": {
    "windows": [
      {
        "title": "Vibe Coding Platform",
        "width": 1280,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
